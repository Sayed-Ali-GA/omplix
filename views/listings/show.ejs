<%- include('../partials/head') %>

<div class="container my-5" style="max-width: 850px;">
       <a href="/listings/" class="btn btn-outline-primary btn-lg rounded-3">‚Üê Back</a>
  <h1 class="mb-4 text-center" style="color: #1a73e8;">
    <%= foundListing.title %>
  </h1>

  <div 
    class="image-container mb-4"
    data-bs-toggle="modal"
    data-bs-target="#zoomModal"
  >
    <img 
      src="<%= foundListing.image.url %>" 
      alt="Image of <%= foundListing.title %>" 
      class="hover-zoom"
      loading="lazy"
    />
  </div>

  <div class="modal fade" id="zoomModal" tabindex="-1" aria-labelledby="zoomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
      <div class="modal-content bg-light rounded-4 shadow-lg border-0">
        <div class="modal-header border-0">
          <h5 class="modal-title fw-bold text-primary" id="zoomModalLabel"><%= foundListing.title %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-0">
          <img 
            src="<%= foundListing.image.url %>" 
            alt="Zoomed Image" 
            class="modal-img"
          />
        </div>
      </div>
    </div>
  </div>

  <% if (user && foundListing.seller._id.equals(user._id)) { %>
    <div class="action-buttons">
      <form action="/listings/<%= foundListing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
      </form>
      <a href="/listings/<%= foundListing._id %>/edit" class="btn btn-outline-warning">Edit</a>
    </div>
  <% } %>

<div class="listing-details text-muted small">
  <p><strong class="text-dark">Price:</strong> <span class="listing-price"><%= foundListing.price %> BHD</span></p>
  <p><strong class="text-dark">Description:</strong><br><%= foundListing.description %></p>
  <p><strong class="text-dark">Seller:</strong> <%= foundListing.seller.username %></p>
  <p><strong class="text-dark">Mobile Number:</strong> <%= foundListing.contact %></p>
</div>


  <form action="/listings/<%= foundListing._id %>/wishlist" method="POST" class="d-flex justify-content-center mb-5">
    <button type="submit" class="btn btn-outline-info btn-lg rounded-3">‚ô° Add to Wishlist</button>
  </form>

  <h3 class="text-center mb-4 text-secondary">Add a Comment</h3>
  <form action="/listings/<%= foundListing._id %>/comments" method="POST" class="mb-5">
    <textarea name="content" class="form-control form-control-lg shadow-sm rounded-3" rows="4" placeholder="Write your comment here..." required></textarea>
    <div class="d-flex justify-content-center mt-3">
      <button type="submit" class="btn btn-primary shadow-sm">Post Comment</button>
    </div>
  </form>

  <div class="text-center mb-5">
    <button 
      class="btn btn-outline-primary"
      data-bs-toggle="modal"
      data-bs-target="#commentsModal">
      View All Comments üí¨
    </button>
  </div>

  <h3 class="text-center mb-3 text-primary">All Comments</h3>
  <ul class="list-group mb-4">
    <% if (foundListing.comments.length === 0) { %>
      <li class="list-group-item text-center text-muted">No comments yet.</li>
    <% } else { %>
      <% foundListing.comments.forEach((comment) => { %>
        <li class="list-group-item">
          <strong><%= comment.author.username %></strong>: <em><%= comment.content %></em>
        </li>
      <% }) %>
    <% } %>
  </ul>

  <div class="modal fade" id="commentsModal" tabindex="-1" aria-labelledby="commentsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
      <div class="modal-content rounded-4 shadow">
        <div class="modal-header">
          <h5 class="modal-title" id="commentsModalLabel">All Comments</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% if (foundListing.comments.length === 0) { %>
            <p class="text-muted text-center">No comments yet.</p>
          <% } else { %>
            <ul class="list-group list-group-flush">
              <% foundListing.comments.forEach((comment) => { %>
                <li class="list-group-item">
                  <strong><%= comment.author.username %></strong>: <%= comment.content %>
                </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>
    </div>
  </div>

</div>
</body>
</html>
